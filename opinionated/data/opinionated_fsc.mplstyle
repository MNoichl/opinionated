# https://matplotlib.org/stable/api/matplotlib_configuration_api.html#matplotlib.RcParams
# from seaborn dark
legend.frameon: False
legend.numpoints: 1
legend.scatterpoints: 1


xtick.direction: out
ytick.direction: out


#xtick.color: #2A3459
#ytick.color: #2A3459


axes.axisbelow: True
axes.grid: True
grid.linestyle: --
grid.linewidth: 1.3
grid.color: e5e5e5


font.family: sans-serif
